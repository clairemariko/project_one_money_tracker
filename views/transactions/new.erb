
<div class="content">


<span class="card-title"><h1><center>Welcome</center></h1></span>
  <h3><center>Input Your Transaction Details Below</center></h3><br><br>

  <form action="/transactions" method="post">
    <label for="transaction_date">Date: </label>
    <input class="box" type="date" name="transaction_date"><br><br>

    <label for="merchant_id">Merchant: </label>
    <select class="merchantbox" name="merchant_id">
      <% @merchants.each do |merchant| %>
        <option value="<%= merchant.id %>"><%= merchant.name %></option>
      <% end %>
    </select><br><br>

    <label for="tag_id">Tag: </label>
    <select class="tagbox" name="tag_id">
      <% @tags.each do |tag| %>
        <option value="<%= tag.id %>"><%= tag.name %></option>
      <% end %>
    </select><br><br>

    <label for="value">Value: </label>
    <input class="box" type="number" name="value"><br><br>

   <input class="box" type='submit' value="Save Transaction">
  </form>

</div>




